{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "rootDir": "./src",
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true

  },
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}
